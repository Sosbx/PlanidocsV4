import React, { useState, useRef, useEffect, useCallback } from 'react';
import { format, isWithinInterval } from 'date-fns';
import { fr } from 'date-fns/locale';
import { MessageSquare, UserCheck, UserX, AlertTriangle, ChevronDown, ChevronUp, ChevronLeft, ChevronRight, ArrowLeftRight, Calendar, Eye } from 'lucide-react';
import './ShiftBadgeAnimation.css';
import { isGrayedOut } from '../../utils/dateUtils';
import { debounce } from '../../utils/debounce';
import type { ShiftExchange } from '../../types/planning';
import type { User } from '../../types/users';
import type { ShiftAssignment } from '../../types/planning';

interface GroupedShiftExchangeListProps {
  exchanges: ShiftExchange[];
  user: any; // Utilisateur connect√©
  users: User[];
  userAssignments: Record<string, ShiftAssignment>;
  conflictStates: Record<string, boolean>;
  receivedShifts: Record<string, { 
    originalUserId: string; 
    newUserId: string; 
    isPermutation: boolean;
    shiftType: string;
    timeSlot: string;
  }>;
  isInteractionDisabled: boolean;
  bagPhaseConfig: any;
  onToggleInterest: (exchange: ShiftExchange) => void;
  onSelectDate: (date: string) => void;
  selectedDate?: string; // Date actuellement s√©lectionn√©e
}

interface GroupedExchanges {
  [date: string]: {
    dateObj: Date;
    exchanges: ShiftExchange[];
  };
}

const GroupedShiftExchangeList: React.FC<GroupedShiftExchangeListProps> = ({
  exchanges,
  user,
  users,
  userAssignments,
  conflictStates,
  receivedShifts,
  isInteractionDisabled,
  bagPhaseConfig,
  onToggleInterest,
  onSelectDate,
  selectedDate,
}) => {
  const [expandedDates, setExpandedDates] = useState<Record<string, boolean>>({});
  const [visibleDates, setVisibleDates] = useState<string[]>([]);
  const [primaryVisibleDate, setPrimaryVisibleDate] = useState<string | null>(null);
  const dateRefs = useRef<Record<string, HTMLDivElement | null>>({});
  const containerRef = useRef<HTMLDivElement>(null);
  const indicatorRef = useRef<HTMLDivElement>(null);

  // Regrouper les √©changes par date - optimis√© avec useMemo
  const groupedExchanges = React.useMemo(() => {
    const grouped: GroupedExchanges = {};
    
    exchanges.forEach(exchange => {
      if (!grouped[exchange.date]) {
        grouped[exchange.date] = {
          dateObj: new Date(exchange.date),
          exchanges: []
        };
      }
      grouped[exchange.date].exchanges.push(exchange);
    });
    
    return grouped;
  }, [exchanges]);
  
  // Trier les dates par ordre chronologique - m√©moris√©
  const sortedDates = React.useMemo(() => 
    Object.keys(groupedExchanges).sort((a, b) => a.localeCompare(b)),
    [groupedExchanges]);

  // Basculer l'√©tat d'expansion d'une date
  const toggleDateExpansion = (date: string) => {
    setExpandedDates(prev => ({
      ...prev,
      [date]: !prev[date]
    }));
    
    // Si on d√©veloppe une date, la s√©lectionner pour le planning
    if (!expandedDates[date]) {
      onSelectDate(date);
    }
  };

  // Initialiser toutes les dates comme d√©velopp√©es par d√©faut
  React.useEffect(() => {
    const initialExpanded: Record<string, boolean> = {};
    sortedDates.forEach(date => {
      initialExpanded[date] = true;
    });
    setExpandedDates(initialExpanded);
  }, [sortedDates.length]);

  // S√©lectionner la premi√®re date au chargement initial si aucune date n'est s√©lectionn√©e
  useEffect(() => {
    if (sortedDates.length > 0 && !selectedDate) {
      onSelectDate(sortedDates[0]);
    }
  }, [sortedDates, selectedDate, onSelectDate]);

  // Fonction pour d√©terminer quelle(s) date(s) est/sont visible(s) dans la viewport
  const updateVisibleDates = useCallback(
    debounce(() => {
      const dateElements = Object.entries(dateRefs.current);
      if (dateElements.length === 0) return;
      
      const visibleDatesArray: string[] = [];
      let bestVisibilityScore = 0;
      let mostVisibleDate: string | null = null;
      
      dateElements.forEach(([date, element]) => {
        if (!element) return;
        
        const rect = element.getBoundingClientRect();
        const windowHeight = window.innerHeight;
        
        // Une date est consid√©r√©e visible si au moins une partie est dans la viewport
        const isVisible = rect.bottom > 0 && rect.top < windowHeight;
        
        if (isVisible) {
          visibleDatesArray.push(date);
          
          // Calculer la visibilit√© (pourcentage de l'√©l√©ment visible dans la viewport)
          const visibleHeight = Math.min(rect.bottom, windowHeight) - Math.max(rect.top, 0);
          const percentVisible = visibleHeight / rect.height;
          
          // Facteur suppl√©mentaire: privil√©gier les √©l√©ments centr√©s dans la viewport
          const distanceFromCenter = Math.abs((rect.top + rect.bottom) / 2 - windowHeight / 2);
          const centeringFactor = 1 - (distanceFromCenter / windowHeight);
          
          // Score combin√©: visibilit√© + centrage
          const visibilityScore = percentVisible * 0.6 + centeringFactor * 0.4;
          
          if (visibilityScore > bestVisibilityScore) {
            bestVisibilityScore = visibilityScore;
            mostVisibleDate = date;
          }
        }
      });
      
      setVisibleDates(visibleDatesArray);
      
      // Mettre √† jour la date principale visible et synchroniser le planning fixe
      if (mostVisibleDate && mostVisibleDate !== primaryVisibleDate) {
        setPrimaryVisibleDate(mostVisibleDate);
        onSelectDate(mostVisibleDate);
        
        // Ajout de l'animation pour l'indicateur
        if (indicatorRef.current) {
          indicatorRef.current.classList.remove('date-indicator-update');
          void indicatorRef.current.offsetWidth; // Force reflow
          indicatorRef.current.classList.add('date-indicator-update');
        }
      }
    }, 150),
    [primaryVisibleDate, onSelectDate]
  );
  
  // Ajouter l'√©couteur de d√©filement optimis√©
  useEffect(() => {
    // R√©cup√©rer directement le container de d√©filement
    const scrollContainer = document.getElementById('shift-exchange-container');
    
    // Utiliser le container sp√©cifique pour la d√©tection du d√©filement
    if (scrollContainer) {
      // N'ajouter qu'un seul √©couteur de d√©filement sur le conteneur principal
      scrollContainer.addEventListener('scroll', updateVisibleDates);
      
      // D√©clencher apr√®s le rendu initial pour initialiser l'√©tat
      requestAnimationFrame(() => {
        updateVisibleDates();
      });
    }
    
    // Nettoyage
    return () => {
      if (scrollContainer) {
        scrollContainer.removeEventListener('scroll', updateVisibleDates);
      }
    };
  }, [updateVisibleDates]);

  const periodNames = {
    'M': 'Matin',
    'AM': 'Apr√®s-midi',
    'S': 'Soir'
  };

  // Ajoutons quelques √©tats pour am√©liorer l'organisation et la navigation
  const [currentWeek, setCurrentWeek] = useState<number | null>(null);
  const [filterPeriod, setFilterPeriod] = useState<'all' | 'M' | 'AM' | 'S'>('all');

  // Fonction utilitaire pour obtenir le num√©ro de semaine
  const getWeekNumber = (date: Date) => {
    const firstDayOfYear = new Date(date.getFullYear(), 0, 1);
    const pastDaysOfYear = (date.getTime() - firstDayOfYear.getTime()) / 86400000;
    return Math.ceil((pastDaysOfYear + firstDayOfYear.getDay() + 1) / 7);
  };

  // Grouper les dates par semaine
  const datesByWeek = React.useMemo(() => {
    const grouped: Record<number, string[]> = {};
    
    sortedDates.forEach(date => {
      const dateObj = new Date(date);
      const weekNum = getWeekNumber(dateObj);
      
      if (!grouped[weekNum]) {
        grouped[weekNum] = [];
      }
      
      grouped[weekNum].push(date);
    });
    
    return grouped;
  }, [sortedDates]);

  // Initialiser la semaine courante lors du chargement
  React.useEffect(() => {
    if (Object.keys(datesByWeek).length > 0 && !currentWeek) {
      const weeks = Object.keys(datesByWeek).map(Number);
      const today = new Date();
      const currentWeekNum = getWeekNumber(today);
      
      // Trouver la semaine la plus proche de la semaine actuelle
      const closestWeek = weeks.reduce((prev, curr) => 
        Math.abs(curr - currentWeekNum) < Math.abs(prev - currentWeekNum) ? curr : prev
      );
      
      setCurrentWeek(closestWeek);
    }
  }, [datesByWeek, currentWeek]);

  // Fonction pour filtrer les √©changes par p√©riode
  const filterExchangesByPeriod = (exchanges: ShiftExchange[]) => {
    if (filterPeriod === 'all') return exchanges;
    return exchanges.filter(exchange => exchange.period === filterPeriod);
  };

  return (
    <div className="space-y-4 relative pb-32 h-full" ref={containerRef}>
      {/* Contr√¥les de filtrage et de navigation */}
      <div className="bg-white rounded-lg shadow-sm p-3 mb-4 sticky top-0 z-10">
        <div className="flex flex-col gap-2">
          {/* Filtres de p√©riode */}
          <div className="flex items-center gap-2 justify-center">
            <span className="text-xs text-gray-500">Filtrer:</span>
            <div className="flex space-x-1">
              <button 
                onClick={() => setFilterPeriod('all')} 
                className={`text-xs px-2 py-1 rounded ${filterPeriod === 'all' ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-600'}`}
              >
                Tous
              </button>
              <button 
                onClick={() => setFilterPeriod('M')} 
                className={`text-xs px-2 py-1 rounded ${filterPeriod === 'M' ? 'bg-amber-100 text-amber-700' : 'bg-gray-100 text-gray-600'}`}
              >
                Matin
              </button>
              <button 
                onClick={() => setFilterPeriod('AM')} 
                className={`text-xs px-2 py-1 rounded ${filterPeriod === 'AM' ? 'bg-sky-100 text-sky-700' : 'bg-gray-100 text-gray-600'}`}
              >
                AM
              </button>
              <button 
                onClick={() => setFilterPeriod('S')} 
                className={`text-xs px-2 py-1 rounded ${filterPeriod === 'S' ? 'bg-violet-100 text-violet-700' : 'bg-gray-100 text-gray-600'}`}
              >
                Soir
              </button>
            </div>
          </div>
          
          {/* Navigation par semaine si nous avons plusieurs semaines */}
          {Object.keys(datesByWeek).length > 1 && (
            <div className="flex items-center justify-between">
              <button 
                onClick={() => {
                  const weeks = Object.keys(datesByWeek).map(Number).sort((a, b) => a - b);
                  const currentIndex = weeks.indexOf(currentWeek!);
                  if (currentIndex > 0) {
                    setCurrentWeek(weeks[currentIndex - 1]);
                  }
                }}
                disabled={!currentWeek || Object.keys(datesByWeek).map(Number).sort((a, b) => a - b)[0] === currentWeek}
                className="text-xs flex items-center gap-1 px-2 py-1 rounded bg-gray-100 disabled:opacity-50"
              >
                <ChevronLeft className="h-3 w-3" /> Semaine pr√©c√©dente
              </button>
              
              <div className="text-xs text-gray-500">
                {currentWeek && `Semaine ${currentWeek}`}
              </div>
              
              <button 
                onClick={() => {
                  const weeks = Object.keys(datesByWeek).map(Number).sort((a, b) => a - b);
                  const currentIndex = weeks.indexOf(currentWeek!);
                  if (currentIndex < weeks.length - 1) {
                    setCurrentWeek(weeks[currentIndex + 1]);
                  }
                }}
                disabled={!currentWeek || Object.keys(datesByWeek).map(Number).sort((a, b) => a - b).pop() === currentWeek}
                className="text-xs flex items-center gap-1 px-2 py-1 rounded bg-gray-100 disabled:opacity-50"
              >
                Semaine suivante <ChevronRight className="h-3 w-3" />
              </button>
            </div>
          )}
        </div>
      </div>

      {/* Cartes de date et d'√©changes */}
      {sortedDates
        .filter(date => {
          // Filtrer par semaine si une semaine est s√©lectionn√©e
          if (!currentWeek) return true;
          const dateWeek = getWeekNumber(new Date(date));
          return dateWeek === currentWeek;
        })
        .map(date => {
          const { dateObj, exchanges: dateExchanges } = groupedExchanges[date];
          const filteredExchanges = filterExchangesByPeriod(dateExchanges);
          const isWeekendOrHoliday = isGrayedOut(dateObj);
          const isExpanded = expandedDates[date] !== false; // Par d√©faut, d√©velopp√©
          
          // Skip si aucun √©change apr√®s filtrage
          if (filteredExchanges.length === 0 && filterPeriod !== 'all') return null;
          
          return (
            <div 
              key={date} 
              ref={el => dateRefs.current[date] = el}
              data-date={date}
              className={`bg-white rounded-xl shadow-sm overflow-hidden
                transform transition-all duration-300 ease-out
                ${isWeekendOrHoliday ? 'bg-red-50/30' : ''}
                ${selectedDate === date ? 'ring-2 ring-indigo-500 scale-[1.02] shadow-lg' : 'hover:shadow hover:scale-[1.005]'}
                ${visibleDates.includes(date) ? 'border-indigo-200' : ''}
                ${primaryVisibleDate === date ? 'border-l-4 border-l-indigo-500 bg-indigo-50/20' : ''}
              `}
            >
              {/* En-t√™te minimaliste de date */}
              <div 
                className={`px-4 py-3 flex justify-between items-center cursor-pointer
                  ${isWeekendOrHoliday ? 'bg-red-50' : 'bg-indigo-50/30'}
                  hover:bg-indigo-100/50 transition-all duration-200
                `}
                onClick={() => toggleDateExpansion(date)}
              >
                <div className="flex items-center gap-1.5">
                  <div className="flex items-center gap-1.5">
                    <span className={`text-[11px] font-semibold px-1.5 py-0.5 rounded-md ${isWeekendOrHoliday ? 'text-red-600 bg-red-100' : 'text-indigo-600 bg-indigo-100'}`}>
                      {format(dateObj, 'EEEE', { locale: fr }).substring(0, 3).toUpperCase()}
                    </span>
                    <span className={`text-base font-semibold ${isWeekendOrHoliday ? 'text-red-700' : 'text-gray-800'}`}>
                      {format(dateObj, 'd MMM', { locale: fr })}
                    </span>
                    {filterPeriod === 'all' && (
                      <span className="text-xs font-normal text-gray-500 ml-2">
                        {dateExchanges.length} garde{dateExchanges.length > 1 ? 's' : ''}
                      </span>
                    )}
                  </div>
                  
                  {/* Information sur le nombre de gardes - texte simple sans pastille */}
                  {filterPeriod !== 'all' && (
                    <div className="ml-2">
                      <span className="text-xs text-gray-500">
                        {filteredExchanges.length} garde{filteredExchanges.length > 1 ? 's' : ''}
                      </span>
                    </div>
                  )}
                </div>
                <button className="p-1.5 rounded-full bg-white/80 shadow-sm hover:bg-white hover:shadow transition-all">
                  {isExpanded ? (
                    <ChevronUp className="h-4 w-4 text-indigo-600" />
                  ) : (
                    <ChevronDown className="h-4 w-4 text-indigo-600" />
                  )}
                </button>
              </div>
              
              {/* Liste des gardes pour cette date */}
              {isExpanded && filteredExchanges.length > 0 && (
                <div className="divide-y divide-gray-100/60">
                  {filteredExchanges.map(exchange => {
                    const exchangeUser = users.find(u => u.id === exchange.userId);
                    const isInterested = exchange.interestedUsers?.includes(user?.id || '');
                    const hasConflict = isInterested && conflictStates[exchange.id];
                    const interestedCount = exchange.interestedUsers?.length || 0;
                    const isUnavailable = exchange.status === 'unavailable' && bagPhaseConfig.phase === 'completed';
                    
                    // V√©rifier si la cellule repr√©sente une garde re√ßue via un √©change
                    const key = `${exchange.date}-${exchange.period}`;
                    const receivedShift = receivedShifts[key];
                    
                    // Nouvelle condition pour les permutations
                    const isReceivedShift = receivedShift && (
                      receivedShift.newUserId === user?.id || 
                      (receivedShift.isPermutation && receivedShift.originalUserId === user?.id)
                    );
                    
                    // Pour afficher diff√©remment les permutations
                    const isReceivedPermutation = isReceivedShift && receivedShift?.isPermutation;

                    return (
                      <div 
                        key={exchange.id} 
                        className={`p-2.5 sm:p-3 hover:bg-indigo-50/30 transition-colors cursor-pointer shift-card
                          transform transition-all duration-300 ease-out
                          ${isUnavailable ? 'bg-gray-100' : ''}
                          ${isReceivedShift ? 'hover:scale-[1.01]' : ''}
                          ${isInterested ? 'bg-green-50/20 shift-item-interested' : ''}
                          ${hasConflict ? 'bg-red-50/20 shift-item-conflict' : ''}
                          ${exchange.userId === user?.id ? 'bg-gray-50 opacity-75 shift-card-user' : ''}
                        `}
                        onClick={() => {
                          // S√©lectionner la date de cette garde quand on clique sur la carte
                          onSelectDate(exchange.date);
                        }}
                      >
                        <div className="flex flex-row items-center justify-between gap-1">
                          {/* P√©riode et type de garde */}
                          <div className="flex items-center gap-1.5 sm:gap-2">
                            <button
                              onClick={(e) => {
                                // Emp√™cher la propagation pour √©viter de d√©clencher l'√©v√©nement du parent
                                e.stopPropagation();
                                
                                if (!isInteractionDisabled && !isUnavailable && exchange.userId !== user?.id && !isReceivedShift) {
                                  // R√©f√©rence √† l'√©l√©ment pour l'animation
                                  const badgeElement = document.getElementById(`shift-badge-${exchange.id}`);
                                  if (badgeElement) {
                                    // Ajouter la classe d'animation appropri√©e
                                    if (isInterested) {
                                      badgeElement.classList.remove('shift-badge-interested');
                                      badgeElement.classList.add('shift-badge-ripple');
                                    } else {
                                      badgeElement.classList.add('shift-badge-ripple');
                                      // Ajouter la classe "int√©ress√©" apr√®s un court d√©lai
                                      setTimeout(() => {
                                        badgeElement.classList.remove('shift-badge-ripple');
                                        badgeElement.classList.add('shift-badge-interested');
                                      }, 800);
                                    }
                                  }
                                  
                                  // Appeler la fonction de toggle
                                  onToggleInterest(exchange);
                                }
                              }}
                              id={`shift-badge-${exchange.id}`}
                              disabled={isInteractionDisabled || exchange.userId === user?.id || isReceivedShift || isUnavailable}
                              className={`
                                min-w-[50px] px-2 py-2 sm:px-3 sm:py-2 rounded-md text-sm font-bold transition-all shadow-sm flex justify-center items-center
                                ${exchange.period === 'M'
                                  ? 'bg-amber-100 text-amber-800 border border-amber-300 hover:bg-amber-200 shift-badge-morning'
                                  : exchange.period === 'AM'
                                  ? 'bg-sky-100 text-sky-800 border border-sky-300 hover:bg-sky-200 shift-badge-afternoon'
                                  : 'bg-violet-100 text-violet-800 border border-violet-300 hover:bg-violet-200 shift-badge-evening'
                                }
                                ${isInteractionDisabled || exchange.userId === user?.id || isReceivedShift || isUnavailable
                                  ? 'opacity-70 cursor-not-allowed'
                                  : 'cursor-pointer'
                                }
                                ${isInterested && !hasConflict
                                  ? 'shift-badge-interested ring-2 ring-green-500 ring-offset-1'
                                  : ''
                                }
                                ${hasConflict
                                  ? 'shift-badge-conflict ring-2 ring-red-500 ring-offset-1'
                                  : ''
                                }
                              `}
                            >
                              <div className="flex items-center">
                                {/* Ic√¥ne selon la p√©riode */}
                                <span className="mr-1 hidden sm:inline-flex">
                                  {exchange.period === 'M' ? '‚òÄÔ∏è' : exchange.period === 'AM' ? 'üå§Ô∏è' : 'üåô'}
                                </span>
                                <span className="font-bold">{exchange.shiftType}</span>
                                {interestedCount > 0 && (
                                  <span className="ml-1 px-1 py-0.5 bg-white/70 rounded-sm text-[10px] font-semibold">
                                    {interestedCount}
                                  </span>
                                )}
                              </div>
                            </button>
                            
                            {/* Version am√©lior√©e des infos sur l'√©change */}
                            <div className="flex flex-col">
                              <span className="text-xs text-gray-700 font-medium truncate max-w-[150px]">
                                {exchange.comment || (exchangeUser ? exchangeUser.lastName.toUpperCase() : '')}
                              </span>
                              {/* P√©riode en texte */}
                              <span className="text-[10px] text-gray-500 hidden sm:block">
                                {periodNames[exchange.period as keyof typeof periodNames]}
                              </span>
                            </div>
                          </div>
                          
                          {/* Badges d'√©tats sur le c√¥t√© droit */}
                          <div className="flex gap-1">
                            {isInterested && !hasConflict && (
                              <span className="bg-green-100 text-green-800 text-xs px-1.5 py-0.5 rounded-full flex items-center">
                                <span className="hidden sm:inline">Int√©ress√©</span>
                                <UserCheck className="h-3 w-3 sm:ml-1" />
                              </span>
                            )}
                            {hasConflict && (
                              <span className="bg-red-100 text-red-800 text-xs px-1.5 py-0.5 rounded-full flex items-center">
                                <span className="hidden sm:inline">√âchange</span>
                                <ArrowLeftRight className="h-3 w-3 sm:ml-1" />
                              </span>
                            )}
                          </div>
                        </div>
                      </div>
                    );
                  })}
                </div>
              )}
              
              {/* Afficher un message si pas d'√©changes apr√®s filtrage */}
              {isExpanded && filteredExchanges.length === 0 && (
                <div className="p-4 text-center text-sm text-gray-500">
                  Aucune garde {filterPeriod === 'M' ? 'du matin' : filterPeriod === 'AM' ? 'de l\'apr√®s-midi' : filterPeriod === 'S' ? 'du soir' : ''} disponible pour cette date
                </div>
              )}
            </div>
          );
        })}
      
      {sortedDates.length === 0 && (
        <div className="bg-white rounded-lg shadow-md p-6">
          <p className="text-gray-500 text-center">
            Aucune garde n'est actuellement disponible √† l'√©change
          </p>
        </div>
      )}

      {/* Indicateur de fin minimaliste */}
      <div className="h-20 flex items-center justify-center">
        <div className="w-8 h-1 bg-gray-200 rounded-full"></div>
      </div>
    </div>
  );
};

export default GroupedShiftExchangeList;